@{
    ViewBag.Title = "shopStore";
    Layout = "~/Views/Shared/New_Layout.cshtml";
    NEW_NIU.Models.N_Product p = new NEW_NIU.Models.N_Product();
}


@section HeadScript_Link{
    <link rel="stylesheet" href="//store.niucache.com/static/common/common_6c4817c9.css" />
<link rel="stylesheet" href="//store.niucache.com/static/store/widget/store/list/list_dc6dbb2e.css" />
